// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Event {
    id                          Int         @id @default(autoincrement())
    name                        String      @db.VarChar(200)
    description                 String  
    event_date                  DateTime    @db.Date
    event_group                 String      @db.VarChar(100)
    week_remainder_date         DateTime?   @db.Date
    two_days_remainder_date     DateTime?   @db.Date 
    day_prior_remainder_date    DateTime    @db.Date
}